

<%- include ../layouts/header.ejs %>

	<div class="col-md-12" style="padding:50px;">
		<div class="container">
		  <h1>Admin Login Page</h1>
		  <div class="card">
		    <div class="card-header bg-primary bg-dark">&nbsp;</div>
		    <%
		    	 if(typeof message!=null && typeof message != 'undefined'){
		    %><h1 style="padding: 10px;text-align:center"><%- message %></h1>
		    <%}%>
		    <div class="card-body">
		    	<form action="/admin/login" method="POST">
				  <div class="form-group">
				    <label for="email">Username:</label>
				    <input type="text" class="form-control" name="username" required>
				  </div>
				  <div class="form-group">
				    <label for="pwd">Password:</label>
				    <input type="password" class="form-control" name="pwd" required>
				  </div>
				 
				 <button type="submit" class="btn btn-outline-dark" style="float:right"> LOGIN</button>
				</form>

		    </div> 
		  
		  </div>
		</div>
	</div>


